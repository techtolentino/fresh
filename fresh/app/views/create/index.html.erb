						<option value="#e74c3c">Salmon</option>
						<option value="#34495e">Asphalt</option>
	        </select>
      	</label>
      	<label><h5>addPhrase( );</h5>
	        <select id="phrase">
						<option value="RSPEC MY SHIT">RSpec My Shit</option>
	          <option value="UNDEFINED METHOD">Undefined Method</option>
						<option value="!FALSE">true</option>
						<option value="UNEXPECTED TOKEN">unexpected token</option>
						<option value="DEF INITIALIZE">.new</option>
						<option value="GIT -FORCE">Git Force</option>
						<option value="RAKE UP!">RAKE UP</option>
	        </select>
      	</label>
      	<label><h5>colorPhrase( );</h5>
	        <select id="color_phrase" >
						<option value="#7f8c8d">Concrete</option>
		        <option value="#39c0da">Turquoise</option>
		        <option value="#f82576">Pink</option>
						<option value="#27ae60">Kelly</option>
						<option value="#9b59b6">Purps</option>
						<option value="#34495e">Asphalt</option>
						<option value="#e74c3c">Salmon</option>
						<option value="#f39c12">Orange</option>
	        </select>
      	</label>
      	<label><h5>colorShirt( );</h5>
	        <select id="shirt_color" >
						<option value="t-white.png">White</option>
						<option value="t-black.png">Black</option>
		        <option value="t-grey.png">Grey</option>
						<option value="t-red.png">Red</option>
						<option value="t-seafoam.png">Seafoam</option>
	        </select>
