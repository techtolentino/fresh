	<div class="large-12 mid-screen columns text-center bottom-space">
		<div class="large-6 columns text-center">
			<h4 class="bg-purple white-text">PREVIEW</h4>
			<div class="large-12 columns rel">
				
				<!-- design layer A -->
				<div class="large-12 columns design-block">
